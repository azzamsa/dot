bindsym Mod1+Print exec scrot -u $HOME/Pictures/Screenshot/`date +%Y-%m-%d_%H:%M:%S`.png
bindsym Mod1+Shift+Print exec scrot -s $HOME/Pictures/Screenshot/`date +%Y-%m-%d_%H:%M:%S`.png

