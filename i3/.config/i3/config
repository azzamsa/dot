client.focused            $based3   $based2   $base3   $based3  $based2
client.focused_inactive   $based3   $based3   $base0   $based3  $based3
client.unfocused          $based3   $based3   $base0   $based3  $based3
client.urgent             $based3   $magenta  $base3   $based3  $magenta


################
#  Status Bar  #
################

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position bottom
    status_command i3status-rs ~/dotfiles/i3/.config/i3status/config.toml
    font pango:Fira Code, FontAwesome5Free, FontAwesome5Brands 10
    tray_padding 0
    strip_workspace_numbers yes
    colors {
       background $bg
       separator $shade
       statusline $shade

       # workspace indicators	border	backgr.	text
       focused_workspace	$bg	$bg	$indigo
       inactive_workspace	$bg	$bg	$shade
       urgent_workspace	        $bg	$bg	$urgent
       binding_mode             $bg     $bg     $indigo
       }
}


