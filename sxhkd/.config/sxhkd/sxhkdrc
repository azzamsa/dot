#! /bin/sh

#
# wm independent hotkeys
#

## program launcher
super + n
    rofi -modi run,drun,window -lines 12 -padding 18 -width 60 -location 0 -show drun -sidebar-mode -columns 3 -font "Fira Code 14"

super + h
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

	
## take a screenshot
super + shift + p
    flameshot gui

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

## focus or send to the given desktop
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'
	
## jump to another workspace
super + {1-8}
	bspc desktop --focus^{1-8}

# Using chain in bspwm is hard.
# it has no visible mode feedback such i3
# ## set window style
# super + w; {t, p, f}
    # 	bspc node -t {tiled, pseudo_tiled, floating}

## fullscreen
super + f
    bspc desktop -l next

## toggle beetwen pseudo-tiled & tiled
super + p
    bspc node -t pseudo_tiled

## toggle beetwen floating & tiled
super + space
    bspc node -t floating
    
## just in case you want to go back to tiled mode but the toggle keybind doesn't work
super + t
	bspc node -t tiled

## focus the next node in the current desktop
# super + Tab
super + Return
	bspc node -f next.local
