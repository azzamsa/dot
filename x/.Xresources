!!! Xresources

!! XFT
Xft.lcdfilter : lcddefault
Xft.hintstyle : hintslight
Xft.hinting   : true
Xft.antialias : true
Xft.rgba      : rgb

!! st (simple terminal)
st.font: Fira Code:pixelsize=18:antialias=true:autohint=true;
st.alpha: 1

!! color scheme (paperclip light)
*background: #EEEEEE
*foreground: #4D4D4C

*color0:	#EDEDED
*color1:        #D7005F
*color2:        #718C00
*color3:        #D75F00
*color4:        #4271AE
*color5:        #8959A8
*color6:        #3E999F
*color7:        #4D4D4C

*color8:        #969694
*color9:        #D7005F
*color10:       #718C00
*color11:       #D75F00
*color12:       #4271AE
*color13:       #8959A8
*color14:       #3E999F
*color15:       #4D4D4C

!! rofi -- dmenu clone
rofi.opacity:  100
rofi.width:    70
rofi.lines:    15
rofi.font:     Fira Sans, FontAwesome 11
rofi.location: 0
rofi.padding:  5

rofi.color-enabled: true
rofi.color-window: #3f3f3f, #000000, #000000

! State:           bg,      fg,      bgalt    hlbg,    hlfg
! zenburn:         bg,      fg,      bg-05,   bg+1,    fg+1
rofi.color-normal: #3f3f3f, #dcdccc, #383838, #4f4f4f, #ffffef
!                  blue-4,  fg,      blue-5,  blue-3,  fg+1
rofi.color-active: #4c7073, #dcdccc, #366060, #5c888b, #ffffef
!                  red-4,   fg,      red-5,   red-3,   fg+1
rofi.color-urgent: #8c5353, #dcdccc, #7c4343, #9c6363, #ffffef

! rofi keybinding
rofi.kb-row-up:             Up,Control+h
rofi.kb-remove-char-back:   BackSpace,

!! emacs
emacs.verticalScrollBars: false
