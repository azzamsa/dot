#! /bin/sh

#
# wm independent hotkeys
#

## program launcher
super + n; n
    rofi -modi run,drun,window -lines 12 -padding 18 -width 60 -location 0 -show drun -sidebar-mode -columns 3 -font "Fira Code 14"

super + n; e
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

## take a screenshot
super + shift + p
    flameshot gui

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + n; m
    bspc desktop -l next

#
# state/flags
#

# Using chain in bspwm is hard.
# it has no visible mode feedback such i3
# ## set window style
# super + w; {t, p, f}
    #   bspc node -t {tiled, pseudo_tiled, floating}

# window state
super + n; {t, shift + t, s, f}
    bspc node -t {tiled, pseudo_tiled, floating, fullscreen}


#
# focus/swap
#

# focus to next window, next workspace
super + {_, shift+}Return
    bspc node -f {next.local.window, prev.local.window}

super + {_, shift+}Tab
    bspc desktop -f {next.occupied.local, prev.occupied.local}

# focus or send to the given desktop
super + {_,shift + }{4,5,6,7,8}
	bspc {desktop -f,node -d} '{1,2,3,4,5}'

# jump to another workspace
super + {4,5,6,7,8}
	bspc desktop --focus {1,2,3,4,5}

#
# preselect
#

# spit horizontal & split vertical, like in i3
super + y; {h,v}
    bspc node -p {east,south}

# cancel
super + y; Escape
	bspc node -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
# looks odd?. I am using colemak.
super + alt + {n,e,u,r}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {n,e,u,r}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
