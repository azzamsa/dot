{
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "ignore": [
            "dist/*",
            "node_modules/*",
            "ruff_cache/*",
            "target/*",
            ".mypy_cache/*"
        ]
    }
}
