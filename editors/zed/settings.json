{
  "helix_mode": true,
  "relative_line_numbers": "enabled",
  "buffer_font_family": "0xProto Nerd Font",
  "autosave": {
    "after_delay": {
      "milliseconds": 2000,
    },
  },
  "vim_mode": true,
  "icon_theme": "Catppuccin Mocha",
  "ui_font_size": 18.5,
  "buffer_font_size": 24.0,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Modus Vivendi Tinted",
  },
  "ui_font_features": {
    "calt": true,
  },
  "theme_overrides": {
    "Modus Vivendi Tinted": {
      // Editor
      "editor.background": "#000000",
      "editor.active_line_number": "#ff66ff" // magenta-intense
      "editor.gutter.background": "#0d0e1c", // bg-main
      // Tab
      "tab_bar.background": "#000000",
      "tab.inactive_background": "#0d0e1c",
      "tab.active_background": "#2b3045", // bg-inactive
      "syntax": {
        "comment": {
          // red-faint is too harsh
          "color": "#989898", // fg-dim
        },
      },
    },
  },
}
