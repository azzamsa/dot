#!/bin/sh

res=$(printf "lock\nsuspend\nlogout\nreboot\nshutdown" | rofi -dmenu -i -lines 5 -width -20 -hide-scrollbar)

lock() {
    i3lock -i "$HOME"/wallpapers/lockscreen.png
}


case "$res" in
    lock)
        lock
        ;;
    logout)
        bspc quit
        ;;
    suspend)
        lock && systemctl suspend
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        exit 2
esac

exit 0
