#!/bin/sh

# Updating rust-analyzer made easy
# Usage `update-rust-analyzer <version>`. E.g `update-rust-analyzer 2021-11-22`

link="https://github.com/rust-analyzer/rust-analyzer/releases/download/$1/rust-analyzer-x86_64-unknown-linux-gnu.gz"

curl --location "$link" --output /tmp/rust-analyzer.gz
gunzip /tmp/rust-analyzer.gz
chmod +x /tmp/rust-analyzer
sudo cp /tmp/rust-analyzer /usr/local/bin/
