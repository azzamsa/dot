{
  "vim_mode": true,
  "helix_mode": false,
  "languages": {
    "Rust": {
      "inlay_hints": {
        "enabled": true,
      },
    },
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
    },
  },
  "show_edit_predictions": true,
  "minimap": {
    "show": "auto",
  },
  "soft_wrap": "editor_width",
  "relative_line_numbers": "enabled",
  "buffer_font_family": "Maple Mono NF",
  "autosave": {
    "after_delay": {
      "milliseconds": 2000,
    },
  },
  "icon_theme": "Catppuccin Mocha",
  "ui_font_size": 19,
  "buffer_font_size": 24.0,
  // lsp
  "lsp_document_colors": "background",
  "theme": {
    "mode": "dark",
    "light": "Modus Operandi Tinted",
    "dark": "Modus Vivendi Tinted",
  },
  "ui_font_features": {
    "calt": true,
  },
  "theme_overrides": {
    "Modus Vivendi Tinted": {
      // Editor
      "editor.background": "#000000",
      "editor.gutter.background": "#0d0e1c", // bg-main
      "editor.active_line_number": "#ff66ff", // magenta-intense
      // Tab
      "tab_bar.background": "#000000",
      "tab.inactive_background": "#000000",
      "tab.active_background": "#0d0e1c", // bg-main
    },
  },
}
