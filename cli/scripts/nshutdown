#!/usr/bin/env nu

# Script Name: n-poweroff
# Description: Close all app gracefully then shutdown the machine
#
# Usage: ./n-poweroff
#
# Example: ./n-poweroff

def main [] {
  # Define the list of applications to be killed
  let apps = ["neovide", "firefox", "Discord", "keepassxc", "wezterm-gui", "telegram-desktop", "nautilus"]

  # kill each application
  for app in $apps {
    killall $app
  }

  # Shutdown the machine
  poweroff
}
