# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    height 28
    position bottom
    status_command i3status-rs ~/dotfiles/i3/.config/i3status/config.toml
    font pango:Fira Code, Font Awesome 5 Free Regular 9
    tray_padding 0
    strip_workspace_numbers yes
    colors {
       background $bg
       separator $shade
       statusline $shade

       # workspace indicators	border	backgr.	text
       focused_workspace	$bg	$bg	$cwhite
       inactive_workspace	$bg	$bg	$shade
       urgent_workspace	        $bg	$bg	$urgent
       binding_mode             $bg     $bg     $cwhite
       }
}


