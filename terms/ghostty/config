command = zellij
cursor-style = bar
adjust-cursor-thickness = 200%

# Fonts
font-family = "Maple Mono NF"
font-size = 22

# Theme
theme = {{ theme }}

# Keybindings
keybind = clear
keybind = ctrl+w=copy_to_clipboard
keybind = ctrl+y=paste_from_clipboard

keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+equal=reset_font_size

# Window
title = " "

# Mouse
mouse-hide-while-typing = true
