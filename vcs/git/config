[user]
	name = "Azzam S.A"
	email = me@azzamsa.com
	signingKey = BB727432CD92080C!

[credential]
	helper = cache --timeout=86400
	username = azzamsa

[alias]
	s = status
	b = branch
	cl = clone --depth 1
	g = log --graph --pretty=custom           # Show custom graph.
	l = log --pretty=custom --abbrev=7  --date=format:'%d %b %Y %I:%M %p' # Show custom log.
	lr = log --pretty=relative --abbrev=7     # Show custom log with relative date.

[pretty]

	custom = "%C(magenta)%h%C(red)%d %C(yellow)%ad %C(green)%s %C(yellow)(%an)"
	relative = "%C(magenta)%h%C(red)%d %C(yellow)%ar %C(green)%s %C(yellow)(%an)"
	#                       │        │            │            │             └─ author name
	#                       │        │            │            └─ message
	#                       │        │            └─ date (relative)
	#                       │        └─ decorations (branch, heads or tags)
	#                       └─ hash (abbreviated)

[color "branch"]
	current = green bold
	local = green
	remote = yellow

[color "diff"]
	frag = magenta
	meta = yellow
	new = green
	old = red

[color "status"]
	added = green reverse
	changed = yellow reverse
	untracked = red reverse

[gpg]
	program = gpg

[sendemail]
	smtpserver = box.azzamsa.com
	smtpuser = me@azzamsa.com
	smtpencryption = tls
	smtpserverport = 587

[include]
	# Load local configs.
	# https://git-scm.com/docs/git-config#_includes
	#
	# [!] The following needs to remain at the end of this file in
	#     order to allow any of the above configs to be overwritten
	#     by the local ones

	path = ~/.config/git/config.local

# The `**/office/name/**` path must points
# to specific office directory
[includeIf "gitdir:**/office/bgn/**"]
	path = ~/.config/git/config.bgn

[core]
	excludesfile = ~/.config/git/ignore
